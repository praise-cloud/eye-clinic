{
  "name": "eye-clinic",
  "version": "1.0.0",
  "description": "Visual Field Test Management System for Eye Clinics",
  "main": "electron/main.js",
  "scripts": {
    "dev": "concurrently \"vite --port 3000\" \"wait-on http://localhost:3000 && cross-env NODE_ENV=development electron .\"",
    "build": "vite build && electron-builder",
    "build-renderer": "vite build",
    "start": "vite preview && electron .",
    "electron": "electron .",
    "electron-dev": "cross-env NODE_ENV=development electron .",
    "dist": "vite build && electron-builder --publish=never",
    "dist:win": "vite build && electron-builder --win --publish=never",
    "dist:mac": "vite build && electron-builder --mac --publish=never",
    "dist:linux": "vite build && electron-builder --linux --publish=never",
    "setup-db": "node scripts\\setup-database.js",
    "seed-admin": "node scripts\\create-admin.js",
    "test": "jest"
  },
  "keywords": [
    "electron",
    "desktop",
    "eye-clinic",
    "medical",
    "visual-field-test"
  ],
  "author": "Eye Clinic Management Team",
  "license": "ISC",
  "type": "commonjs",
  "build": {
    "appId": "com.eyeclinic.app",
    "productName": "KORENE EYE CLINIC NIG. LTD",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "database/**/*",
      "services/**/*",
      "src/**/*",
      "assets/**/*",
      "package.json"
    ],
    "artifactName": "${productName} Setup ${version}.${ext}",
    "npmRebuild": false,
    "buildDependenciesFromSource": false,
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "src/assets/images/logo.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "mac": {
      "target": [
        "dmg"
      ],
      "icon": "src/assets/images/logo.png",
      "category": "public.app-category.medical"
    },
    "linux": {
      "target": [
        "AppImage"
      ],
      "icon": "src/assets/images/logo.png",
      "category": "Office"
    }
  },
  "devDependencies": {
    "@babel/preset-env": "^7.28.5",
    "@babel/preset-react": "^7.28.5",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/react": "^19.1.13",
    "@types/react-dom": "^19.1.9",
    "babel-jest": "^30.2.0",
    "concurrently": "^9.2.1",
    "cross-env": "^10.0.0",
    "electron": "^38.1.2",
    "electron-builder": "^25.1.8",
    "electron-reload": "^2.0.0-alpha.1",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "nodemon": "^3.1.10",
    "wait-on": "^9.0.1"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.81.0",
    "@vitejs/plugin-react": "^5.0.3",
    "autoprefixer": "^10.4.21",
    "bcryptjs": "^3.0.2",
    "dotenv": "^17.2.3",
    "esbuild": "^0.27.0",
    "fs-extra": "^11.3.2",
    "jspdf": "^3.0.3",
    "pdf-lib": "^1.17.1",
    "postcss": "^8.5.6",
    "puppeteer": "^24.22.3",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-router-dom": "^7.9.4",
    "sqlite3": "^5.1.7",
    "tailwindcss": "^3.4.17",
    "uuid": "^13.0.0",
    "vite": "^7.1.7"
  },
  "optionalDependencies": {
    "@esbuild/win32-x64": "^0.27.0"
  }
}
